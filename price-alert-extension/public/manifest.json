{
  "manifest_version": 3,
  "name": "Chainlink Price Sentinel",
  "version": "0.1.0",
  "description": "Multi-token crypto price alert extension using Chainlink Price Feeds.",
  "permissions": ["notifications","storage"],
  "background": {
    "service_worker": "background/background.js",
    "type" : "module"
  },
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 